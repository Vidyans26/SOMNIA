{
  "expo": {
    "name": "SOMNIA",
    "slug": "somnia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0e27"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourteam.somnia",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "SOMNIA records sleep audio to analyze breathing patterns and detect potential sleep disorders.",
        "NSCameraUsageDescription": "SOMNIA uses the camera to monitor sleep position and movements for comprehensive sleep analysis.",
        "NSMotionUsageDescription": "SOMNIA accesses motion sensors to track sleep movements and restlessness.",
        "NSBluetoothAlwaysUsageDescription": "SOMNIA connects to wearable devices to monitor heart rate and blood oxygen levels during sleep.",
        "UIBackgroundModes": ["audio", "bluetooth-central"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0e27"
      },
      "package": "com.yourteam.somnia",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WAKE_LOCK",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    }
  }
}